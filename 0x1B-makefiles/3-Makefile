# -*- MakeFile -*-

CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm -f *~ holberton

all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM)

oclean:
	rm -f $(OBJ)

fclean:
	$(RM)
	rm -f $(OBJ)

re:
	rm -f $(OBJ)
	$(CC) -c -o main.o main.c
	$(CC) -c -o holberton.o holberton.c
	$(CC) $(OBJ) -o $(NAME)
